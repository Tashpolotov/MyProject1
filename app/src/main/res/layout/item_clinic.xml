<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_item_clinic_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CornerRadius"
            android:background="#DEECF2"/>


        <ImageView
            android:id="@+id/img_clinic_avatar"
            android:layout_width="46dp"
            android:layout_height="34dp"
            android:src="@drawable/on_clinik"
            app:layout_constraintBottom_toTopOf="@id/tv_clinic_name"
            app:layout_constraintStart_toStartOf="@id/tv_clinic_name"
            android:layout_marginStart="6dp"

            />

        <TextView
            android:id="@+id/tv_clinic_name"
            android:layout_width="59dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="@id/img_item_clinic_avatar"
            app:layout_constraintStart_toStartOf="@id/img_item_clinic_avatar"
            android:text="On Clinic"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="50dp"
            android:textColor="#1B6B93"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>